@model MovieStore.Models.DTO.ChangePasswordModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Change Password</title>
        
    <style>
        form {
            border: 3px solid #f1f1f1;
            width: 80%;
            max-width: 400px;
            margin: auto;
            margin-top: 5%;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        input[type=password] {
            width: 100%;
            padding: 12px;
            margin: 8px 0;
            border: 1px solid #ccc;
            box-sizing: border-box;
            border-radius: 4px;
        }

        button {
            background-color: #aa048b;
            color: white;
            padding: 14px 20px;
            margin-top: 10px;
            border: none;
            cursor: pointer;
            width: 100%;
            border-radius: 4px;
            transition: background-color 0.3s;
        }

        button:hover {
            background-color: #930374;
        }

        .container {
            padding: 16px;
        }

        .msg, .text-info {
            padding: 4px;
            display: block;
            text-align: center;
            color: #007bff;
        }

        .err, .text-danger {
            color: red;
        }

        h3 {
            text-align: center;
            color: #aa048b;
        }

    
    </style>
</head>
<body>

<section aria-labelledby="changePasswordForm">
    <form asp-action="ChangePassword" method="post" aria-labelledby="changePasswordForm">
        <h3>Change Password</h3>
        <div class="container">
            <div class="form-group">
                <label asp-for="CurrentPassword">Current Password*</label>
                <input type="password" asp-for="CurrentPassword" required />
                <span class="err" asp-validation-for="CurrentPassword"></span>
            </div>

            <div class="form-group">
                <label asp-for="NewPassword">New Password*</label>
                <input type="password" asp-for="NewPassword" required />
                <span class="err" asp-validation-for="NewPassword"></span>
            </div>

            <div class="form-group">
                <label asp-for="PasswordConfirm">Confirm New Password*</label>
                <input type="password" asp-for="PasswordConfirm" required />
                <span class="err" asp-validation-for="PasswordConfirm"></span>
            </div>

            @if (TempData["msg"] != null)
            {
                <div class="msg">@TempData["msg"]</div>
            }

            <button type="submit">Save</button>
        </div>
    </form>
</section>

</body>
</html>
