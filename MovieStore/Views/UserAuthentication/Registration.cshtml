@model MovieStore.Models.DTO.RegistrationModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration</title>
        
    <style>
        form {
            border: 3px solid #f1f1f1;
            width: 80%;
            max-width: 400px;
            margin: auto;
            margin-top: 5%;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        input[type=text], input[type=password] {
            width: 100%;
            padding: 12px;
            margin: 8px 0;
            border: 1px solid #ccc;
            box-sizing: border-box;
            border-radius: 4px;
        }

        button, .btn {
            background-color: #aa048b;
            color: white;
            padding: 14px 20px;
            margin-top: 10px;
            border: none;
            cursor: pointer;
            width: 100%;
            border-radius: 4px;
            transition: background-color 0.3s;
            text-align: center;
            text-decoration: none;
            display: inline-block;
        }

        .btn-primary {
            background-color: #007bff;
            margin-top: 8px;
        }

        button:hover, .btn:hover {
            background-color: #930374;
        }

        .container {
            padding: 16px;
        }

        .msg, .text-info {
            padding: 4px;
            display: block;
            text-align: center;
            color: #007bff;
        }

        .err, .text-danger {
            color: red;
        }

        h3 {
            text-align: center;
            color: #aa048b;
        }

  
        
    </style>
</head>
<body>

<section aria-labelledby="registrationForm">
    <form asp-action="Registration" method="post" aria-labelledby="registrationForm">
        <h3>Registration</h3>
        <div class="container">
            <div class="form-group">
                <label asp-for="UserName">Username</label>
                <input type="text" class="form-control" asp-for="UserName" required />
                <span class="err" asp-validation-for="UserName"></span>
            </div>

            <div class="form-group">
                <label asp-for="Name">Full Name</label>
                <input type="text" class="form-control" asp-for="Name" required />
                <span class="err" asp-validation-for="Name"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input type="text" class="form-control" asp-for="Email" required />
                <span class="err" asp-validation-for="Email"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password">Password (e.g., John@123)</label>
                <input type="password" class="form-control" asp-for="Password" required />
                <span class="err" asp-validation-for="Password"></span>
            </div>

            <div class="form-group">
                <label asp-for="PasswordConfirm">Confirm Password</label>
                <input type="password" class="form-control" asp-for="PasswordConfirm" required />
                <span class="err" asp-validation-for="PasswordConfirm"></span>
            </div>

            @if (TempData["msg"] != null)
            {
                <div class="msg">@TempData["msg"]</div>
            }
                 
            <button type="submit" class="btn">Register</button>
            <a class="btn btn-primary" href="/UserAuthentication/Login">Already a user? Login</a>
        </div>
    </form>
</section>

</body>
</html>
